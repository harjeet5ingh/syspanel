<%= content_for :title do "Dashboard" end %>

<div class="homepage container">
  <div class="row justify-content-center">
    <div class="col-md-4 mt-4" role="button">
      <%= link_to systems_path do %>
        <div class="text-center bg-primary text-light rounded-3 py-4">
          <div class="fs-4">Systems</div>
          <div class="fs-4 fw-bold pt-2"><%= System.count %></div>
        </div>
      <% end %>
    </div>

    <div class="col-md-4 mt-4" role="button">
      <%= link_to customers_path do %>
        <div class="text-center bg-primary text-light rounded-3 py-4">
          <div class="fs-4">Customers</div>
          <div class="fs-4 fw-bold pt-2"><%= Customer.count %></div>
        </div>
      <% end %>
    </div>
  </div>
</div>