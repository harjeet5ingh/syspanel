<%= content_for :title do "System Details" end %>

<div class="container mt-5">
  <div class="row">
    <div class="col-6">
      <div class="row">
        <div class="col">Id:</div>
        <div class="col"> <%= @system.id %> </div>
      </div>
      
      <div class="row mt-4">
        <div class="col">Name:</div>
        <div class="col"> <%= @system.name.titleize %> </div>
      </div>
      
      <div class="row mt-4">
        <div class="col">Manufactured Date:</div>
        <div class="col"> <%= @system.manufactured_date.strftime("%d %b, %Y") %> </div>
      </div>

      <div class="row mt-4">
        <div class="col">Status:</div>
        <div class="col"> <%= @system.status.capitalize %> </div>
      </div>
    </div>

    <div class="row mt-5 text-center">
      <div class="fs-4">Customers So Far</div>
    </div>
  </div>
</div>